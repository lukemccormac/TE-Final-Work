@model RegistrationViewModel
@{
    ViewData["Title"] = "Registration";
}

<h2>New User Registration</h2>

<form asp-controller="Users" asp-action="Registration" method="post">
    <br />
    <div>
        <label asp-for="FirstName"></label> <br />
        <input asp-for="FirstName" placeholder="enter first name"/>
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName"></label> <br />
        <input asp-for="LastName" placeholder="enter last name"/>
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="Email"></label> <br />
        <input asp-for="Email" placeholder="enter email"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="ConfirmEmail"></label> <br />
        <input asp-for="ConfirmEmail" placeholder="confirm email"/>
        <span asp-validation-for="ConfirmEmail"></span>
    </div>
    <div>
        <label asp-for="Password"></label> <br />
        <input asp-for="Password" placeholder="enter password" type="password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="ConfirmPassword"></label> <br />
        <input asp-for="ConfirmPassword"placeholder="confirm password" type="password" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div>
        <label asp-for="BirthDate"></label> <br />
        <input type="date" min="1900-01-01" max="2019-11-08" asp-for="BirthDate" placeholder="select date of birth"/>
        <span asp-validation-for="BirthDate"></span>
    </div>
    <div>
        <label asp-for="NumberOfTickets"></label> <br />
        <input asp-for="NumberOfTickets" placeholder="enter number of tickets"/>
        <span asp-validation-for="NumberOfTickets"></span>
    </div>

    <input type="submit" value="Submit!" />
</form>
