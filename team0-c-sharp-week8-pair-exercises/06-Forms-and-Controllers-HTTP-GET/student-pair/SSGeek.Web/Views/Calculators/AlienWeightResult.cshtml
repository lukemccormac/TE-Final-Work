@model AlienWeightModel

@{
    ViewData["Title"] = "Alien Weight Result";
    double alienWeight = 0;
}


<section id="calculatorResult" class="centeredPanel">
    <style>

        #calculatorResult {
            display: grid;
            grid-template-columns: auto auto;
            padding: 10px;
        }

        #Planet {
            max-height: 200px;
            grid-column-start: 1;
            grid-column-end: 1;
        }

        h3 {
            grid-column-start: 2;
            font-weight: bold;
            font-size: 16px;
        }
    </style>


    @switch (Model.Planet)
    {
        case "Mercury":
            alienWeight = Model.EarthWeight * .37;
            <img id="Planet" src=~/images/mercury.jpg />
            break;
        case "Venus":
            alienWeight = Model.EarthWeight * .9;
            <img id="Planet" src=~/images/venus.jpg />
            break;
        case "Mars":
            alienWeight = Model.EarthWeight * .38;
            <img id="Planet" src=~/images/mars.jpg />
            break;
        case "Jupiter":
            alienWeight = Model.EarthWeight / 2.65;
            <img id="Planet" src=~/images/jupiter.jpg />
            break;
        case "Saturn":
            alienWeight = Model.EarthWeight / 1.13;
            <img id="Planet" src=~/images/saturn.jpg />
            break;
        case "Uranus":
            alienWeight = Model.EarthWeight / 1.09;
            <img id="Planet" src=~/images/uranus.jpg />
            break;
        case "Neptune":
            alienWeight = Model.EarthWeight / 1.43;
            <img id="Planet" src=~/images/neptune.jpg />
            break;
    }

    <h3> If you are @Model.EarthWeight lbs on planet Earth, then you would weigh @alienWeight lbs on @Model.Planet.</h3>



</section>