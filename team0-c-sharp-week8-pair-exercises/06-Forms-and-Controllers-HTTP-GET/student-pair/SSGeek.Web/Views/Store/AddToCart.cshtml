@model ShoppingCart
@{
    ViewData["Title"] = "AddToCart";
}


<h2>View Cart</h2>

<table class="table table-striped">
    <tr>
        <td>Item</td>
        <td>Cost</td>
        <td>Qty.</td>
        <td>Subtotal</td>
    </tr>

    @* Loop Through the Items in the Cart and Display Them Here *@
    @foreach (ShoppingCartItem item in Model.Items)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Product.Price</td>
            <td>@item.Quantity</td>
            <td>@((item.Product.Price * item.Quantity).ToString("C"))</td>
        </tr>
    }


    <tr>
        <td colspan="4">Grand Total</td>
        <td>@Model.GrandTotal.ToString("C")</td>
    </tr>
</table>


